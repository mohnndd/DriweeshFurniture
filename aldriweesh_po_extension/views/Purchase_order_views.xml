<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherited base Purchase Order Form View -->
    <record id="purchase_order_form_view_inherited" model="ir.ui.view">
        <field name="name">purchase.order.form_view.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="po_type" widget="radio"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.menu" id="purchase.menu_purchase_rfq">
      <field name="groups_id" eval="[(6, 0, [ref('group_po_external'),ref('group_po_internal')])]"/>
    </record>
    <record model="ir.ui.menu" id="purchase.menu_purchase_form_action">
      <field name="groups_id" eval="[(6, 0, [ref('group_po_external'),ref('group_po_internal')])]"/>
    </record>

    <record id="product_template_form_view_inherited" model="ir.ui.view">
        <field name="name">product.template.form_view.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing']" position="after">
                <label for="retail_price" class="mt-1"/>
                <div name="retail_price">
                  <field name="retail_price" class="oe_inline" widget='monetary'
                    options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </div>
                <label for="discounted_sale_price_tire_2" class="mt-1"/>
                <div name="discounted_sale_price_tire_2">
                  <field name="discounted_sale_price_tire_2" class="oe_inline" widget='monetary'
                    options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </div>
                <label for="wholesale_price" class="mt-1"/>
                <div name="wholesale_price">
                  <field name="wholesale_price" class="oe_inline" widget='monetary'
                    options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </div>
                <label for="gov_price" class="mt-1"/>
                <div name="gov_price">
                  <field name="gov_price" class="oe_inline" widget='monetary'
                    options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>